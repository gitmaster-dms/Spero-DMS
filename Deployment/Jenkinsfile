pipeline {
    agent any
    
    options {
        skipDefaultCheckout(true)
    }
 
    environment {
        GIT_REPO_URL = 'https://github.com/gitmaster-dms/Spero-DMS.git'
        GIT_BRANCH = 'main'
        TARGET_DIR = '/var/www/html/DMS_goa'
    } 

    stages {
        stage('Prepare Workspace') {
            steps {
                script {
                    sh '''
                        if [ ! -d "${TARGET_DIR}" ]; then
                            echo "Directory does not exist. Creating ${TARGET_DIR}..."
                            mkdir -p "${TARGET_DIR}"
                            chmod -R 775 "${TARGET_DIR}"
                        else
                            echo "Directory already exists. Skipping creation."
                        fi
                    '''
                }
            }
        }

        stage('Clone or Reset Repository') {
            steps {
                dir("${TARGET_DIR}") {
                    script {
                        if (!fileExists('.git')) {
                            echo "Cloning repository into ${TARGET_DIR}..."
                            def cloneStatus = sh(
                                script: "git clone -b ${GIT_BRANCH} ${GIT_REPO_URL} .",
                                returnStatus: true
                            )
                            if (cloneStatus != 0) {
                                echo "Git clone failed with status: ${cloneStatus}"
                                sh "git clone -b ${GIT_BRANCH} ${GIT_REPO_URL} ." // run again to see full error
                                error("Git clone failed! Exiting pipeline.")
                            }
                        } else {
                            echo "Repository already exists. Resetting and pulling latest changes..."

                            // Print debug values
                            sh "echo GIT_BRANCH=${GIT_BRANCH}; echo GIT_REPO_URL=${GIT_REPO_URL}; echo TARGET_DIR=${TARGET_DIR}; pwd"

                            // Run without returnStatus to let Jenkins show the actual error
                            sh """
                                echo "Running Git Reset Steps..."
                                git config --global --add safe.directory \$(pwd)
                                echo "Fetching branch: ${GIT_BRANCH}"
                                git fetch origin ${GIT_BRANCH}
                                echo "Resetting to origin/${GIT_BRANCH}"
                                git reset --hard origin/${GIT_BRANCH}
                                echo "Cleaning untracked files (excluding vvenv/)..."
                                git clean -fd -e vvenv/
                            """
                        }
                    }
                }
            }
        }



        stage('Check Files') {
            steps {
                dir("${TARGET_DIR}") {
                    sh "ls -al"
                }
            }
        }

        stage('Setup Python Virtual ENV for dependencies') {
            steps {
                dir("${TARGET_DIR}") {
                    sh '''
                        chmod +x Deployment/envsetup.sh
                        Deployment/envsetup.sh
                    '''
                }
            }
        }
 
        stage('Setup Gunicorn') {
            steps {
                dir("${TARGET_DIR}") {
                    sh '''
                        chmod +x Deployment/gunicorn.sh
                        Deployment/gunicorn.sh
                    '''
                }
            }
        }

        stage('Setup NGINX') {
            steps {
                dir("${TARGET_DIR}") {
                    sh '''
                        chmod +x Deployment/nginx.sh
                        Deployment/nginx.sh
                    '''
                }
            }
        }
    } 

    post {
        success {
            echo 'Build was successful!'
        }
        failure {
            echo 'Build failed. Please check the logs.'
        }
    }
}
